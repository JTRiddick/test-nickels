<% include header %>
  <h2>Write a new Post</h2>

  <form method="post" role="form">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="title" name="title" placeholder="entry title" required>
    </div>
    <div class="form-group">
      <label for="content">Entry Text</label>
      <textarea class="form-control" id="body" name="body" placeholder="Don't Post!!" rows="8" cols="80"></textarea>
    </div>
    <div class="form-group">
      <input type="submit" name="" value="Post This" class="btn btn-primary">
    </div>
  </form>

<% include footer %>
